        }

        /* ØªØºÛŒÛŒØ±Ø§Øª Ø¨Ø±Ø§ÛŒ Ø±Ø³Ù¾Ø§Ù†Ø³ÛŒÙˆ */
        @media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .app {
                padding: 20px;
            }

            .app h1 {
                font-size: 24px;
